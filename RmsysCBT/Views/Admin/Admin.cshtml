@model IEnumerable<RmsysCBT.Models.TestResult>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
        <button class="btn btn-outline-dark" onclick="window.print()">🖨 Print Report</button>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-3">Date</th>
                        <th class="p-3">Student Name</th>
                        <th class="p-3">Score</th>
                        <th class="p-3">Percentage</th>
                        <th class="p-3">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="p-3">@item.TakenOn.ToString("g")</td>
                            <td class="p-3 fw-bold">@item.StudentName</td>
                            <td class="p-3">@item.Score / @item.TotalQuestions</td>
                            <td class="p-3">@item.Percentage%</td>
                            <td class="p-3">
                                @if (item.Passed)
                                {
                                    <span class="badge bg-success">Passed</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Failed</span>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center p-5 text-muted">No exams taken yet.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>