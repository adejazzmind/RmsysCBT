@model RmsysCBT.Models.TestResult
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Certificate of Completion</title>
    <style>
        body {
            font-family: 'Times New Roman', serif;
            text-align: center;
            background: #f0f0f0;
            padding: 50px;
        }

        .cert-container {
            width: 800px;
            height: 600px;
            padding: 20px;
            text-align: center;
            border: 10px solid #787878;
            background: white;
            margin: 0 auto;
            position: relative;
        }

        .cert-border {
            width: 100%;
            height: 100%;
            border: 5px double #787878;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h1 {
            font-size: 50px;
            color: #4f46e5;
            margin-bottom: 10px;
        }

        .subtitle {
            font-size: 20px;
            color: #555;
        }

        .name {
            font-size: 40px;
            font-weight: bold;
            border-bottom: 2px solid #333;
            margin: 20px 0;
            display: inline-block;
            padding: 0 20px;
        }

        .score {
            font-size: 24px;
            color: #198754;
            font-weight: bold;
            margin-top: 20px;
        }

        .print-btn {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        /* I removed the comment that was causing the error */
        @@media print {
            .print-btn {
                display: none;
            }

            body {
                background: white;
                margin: 0;
                padding: 0;
            }

            .cert-container {
                border: none;
                width: 100%;
                height: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="cert-container">
        <div class="cert-border">
            <h1>Certificate of Excellence</h1>
            <p class="subtitle">This is to certify that</p>

            <div class="name">@Model.StudentName</div>

            <p class="subtitle">has successfully passed the</p>
            <h3>RmsysCBT Entry Assessment</h3>

            <div class="score">Score: @Model.Percentage%</div>

            <p style="margin-top:40px;">Date: @Model.TakenOn.ToShortDateString()</p>

            <div style="margin-top:30px;">
                <img src="/images/logo.svg" height="60" alt="RmsysCBT" onerror="this.style.display='none'" />
            </div>
        </div>
    </div>

    <button class="print-btn" onclick="window.print()">🖨 Print / Save as PDF</button>
</body>
</html>