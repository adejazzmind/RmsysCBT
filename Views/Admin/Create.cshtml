@model RmsysCBT.Models.Test
@{
    ViewData["Title"] = "Create New Test";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-primary mb-0">
                    <i class="bi bi-file-earmark-plus-fill me-2"></i>Create New Test
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-bold shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            <div class="card border-0 shadow-sm rounded-4 bg-white p-4 p-md-5">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-bold text-muted">Test Title</label>
                        <input asp-for="Title" class="form-control form-control-lg bg-light" placeholder="e.g. Midterm Examination" required />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold text-muted">Description</label>
                        <textarea asp-for="Description" class="form-control bg-light" rows="3" placeholder="Briefly describe what this exam covers..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="DurationMinutes" class="form-label fw-bold text-muted">Duration (in minutes)</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-stopwatch text-muted"></i></span>
                            <input asp-for="DurationMinutes" type="number" min="1" class="form-control bg-light border-start-0" value="30" required />
                        </div>
                        <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill fw-bold shadow-sm">
                        <i class="bi bi-check-circle-fill me-2"></i> Save Test
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}