@model RmsysCBT.Models.Test
@{
    ViewData["Title"] = "Create New Test";
}

<div class="container py-5 max-w-md" style="max-width: 600px;">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white p-4">
        <h3 class="fw-bold text-primary mb-4"><i class="bi bi-file-earmark-plus me-2"></i>Create New Exam</h3>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-medium text-dark">Exam Title</label>
                <input asp-for="Title" class="form-control rounded-pill px-3" placeholder="e.g. C# Basics Assessment" required />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-medium text-dark">Description</label>
                <textarea asp-for="Description" class="form-control rounded-4 px-3" rows="3" placeholder="What is this exam about?"></textarea>
            </div>

            <div class="mb-4">
                <label asp-for="DurationMinutes" class="form-label fw-medium text-dark">Duration (Minutes)</label>
                <input asp-for="DurationMinutes" type="number" class="form-control rounded-pill px-3" value="30" min="1" required />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">
                    <i class="bi bi-save me-1"></i> Save Exam
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>