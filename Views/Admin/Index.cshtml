@model IEnumerable<RmsysCBT.Models.Test>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-shield-lock me-2"></i>Admin Dashboard
        </h2>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Results" class="btn btn-warning rounded-pill px-4 shadow-sm fw-bold text-dark">
                <i class="bi bi-people-fill me-1"></i> View Student Results
            </a>
            <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-plus-lg me-1"></i> Create New Test
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="py-3 px-4">Test Title</th>
                        <th class="py-3">Description</th>
                        <th class="py-3 text-center">Duration</th>
                        <th class="py-3 text-center">Questions</th>
                        <th class="py-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4 fw-bold text-dark">@item.Title</td>
                                <td class="text-muted text-truncate" style="max-width: 250px;">@item.Description</td>
                                <td class="text-center">@item.DurationMinutes mins</td>
                                <td class="text-center">
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary-subtle rounded-pill px-3">
                                        @(item.Questions?.Count ?? 0) Qs
                                    </span>
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="AddQuestion" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm fw-bold">
                                            <i class="bi bi-plus-circle me-1"></i> Add Qs
                                        </a>

                                        <form asp-action="DeleteTest" asp-route-id="@item.Id" method="post" onsubmit="return confirm('⚠️ WARNING: Are you sure you want to delete this test? All questions and student grades for this exam will be permanently erased!');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3 fw-bold">
                                                <i class="bi bi-trash3-fill"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-folder-x fs-1 d-block mb-2"></i>
                                No exams found. Click "Create New Test" to add one!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>