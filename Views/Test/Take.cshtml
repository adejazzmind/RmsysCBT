@model List<RmsysCBT.Models.Question>
@{
    ViewData["Title"] = ViewBag.TestTitle;
}

<style>
    /* --- CRITICAL FIX: HIDE FOOTER ON EXAM PAGE --- */
    footer {
        display: none !important;
    }
    :root {
        --primary: #4f46e5; /* Indigo */
        --primary-light: #e0e7ff;
        --success: #10b981;
        --warning: #f59e0b;
        --bg-color: #f8fafc;
        --text-dark: #1e293b;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    /* --- CRITICAL FIX: HIDE FOOTER ON EXAM PAGE --- */
    /* This prevents the overlap and keeps the student focused */
    footer {
        display: none !important;
    }

    /* --- PALETTE GRID --- */
    .palette-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(40px, 1fr));
        gap: 8px;
        padding: 10px;
        max-height: 400px;
        overflow-y: auto;
    }

    .palette-btn {
        width: 100%;
        aspect-ratio: 1;
        border: 1px solid #e2e8f0;
        background: white;
        color: #64748b;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.2s ease;
        font-size: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

        .palette-btn:hover {
            border-color: var(--primary);
            color: var(--primary);
            transform: translateY(-2px);
        }

        .palette-btn.active {
            border: 2px solid var(--primary);
            background-color: var(--primary-light);
            color: var(--primary);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
        }

        .palette-btn.answered {
            background-color: var(--success);
            color: white;
            border-color: var(--success);
        }

        .palette-btn.review {
            background-color: var(--warning);
            color: white;
            border-color: var(--warning);
        }

    /* --- QUESTION CARD STYLING --- */
    .question-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        display: none;
        animation: fadeIn 0.3s ease-in-out;
    }

        .question-card.active {
            display: block;
        }

    /* --- OPTION (ANSWER) STYLING --- */
    .option-label {
        display: block;
        padding: 16px 20px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s;
        font-weight: 500;
        color: var(--text-dark);
        background: white;
    }

        .option-label:hover {
            background-color: #f8fafc;
            border-color: #cbd5e1;
        }

    .btn-check:checked + .option-label {
        border-color: var(--primary);
        background-color: var(--primary-light);
        color: var(--primary);
        font-weight: 700;
        box-shadow: 0 4px 12px rgba(79, 70, 229, 0.15);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container-fluid py-4" style="min-height: 100vh;">
    <form method="post" action="/Test/Submit" id="examForm">
        <input type="hidden" name="testId" value="@ViewBag.TestId" />

        <div class="row g-4 justify-content-center">
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded-4 shadow-sm">
                    <div>
                        <small class="text-muted text-uppercase fw-bold ls-1">Assessment</small>
                        <h5 class="m-0 text-primary fw-bold">@ViewBag.TestTitle</h5>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-stopwatch text-danger fs-5"></i>
                        <span class="fw-bold fs-4 text-dark" id="timerDisplay">00:00</span>
                    </div>
                </div>

                @for (int i = 0; i < Model.Count; i++)
                {
                    var q = Model[i];
                    <div class="question-card p-5 @(i == 0 ? "active" : "")" id="q-@i">

                        <div class="d-flex justify-content-between align-items-start mb-4 border-bottom pb-3">
                            <div>
                                <span class="badge bg-light text-secondary mb-2">Question @(i + 1) of @Model.Count</span>
                                <h4 class="text-dark fw-bold">@q.Section</h4>
                            </div>
                            <button type="button" class="btn btn-outline-warning btn-sm fw-bold rounded-pill px-3" onclick="markReview(@i)">
                                <i class="bi bi-flag"></i> Flag
                            </button>
                        </div>

                        <p class="fs-5 mb-5 lh-base text-dark">@q.Text</p>

                        <div class="d-grid gap-3">
                            @foreach (var opt in q.Options)
                            {
                                <div class="position-relative">
                                    <input type="radio" class="btn-check"
                                           name="answers[@q.Id]"
                                           id="opt_@opt.Id"
                                           value="@opt.Id"
                                           onchange="markAnswered(@i)">
                                    <label class="option-label" for="opt_@opt.Id">
                                        @opt.Text
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4 mb-5">
                    <button type="button" class="btn btn-light px-4 py-2 fw-bold text-secondary border" onclick="prevQ()">
                        <i class="bi bi-arrow-left"></i> Previous
                    </button>

                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary px-5 py-2 fw-bold shadow-sm" onclick="nextQ()">
                            Next <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <div class="text-end mb-5">
                    <button type="submit" class="btn btn-success px-5 py-3 fw-bold rounded-pill shadow" onclick="return confirm('Are you sure you want to finish the exam?')">
                        Complete & Submit Exam
                    </button>
                </div>

                <div style="height: 50px;"></div>

            </div>

            <div class="col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100" style="position: sticky; top: 20px;">
                    <div class="card-header bg-white border-bottom p-3">
                        <h6 class="fw-bold m-0">Question Navigator</h6>
                    </div>
                    <div class="card-body p-2">
                        <div class="palette-grid">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="palette-btn @(i == 0 ? "active" : "")" id="p-@i" onclick="jumpTo(@i)">
                                    @(i + 1)
                                </div>
                            }
                        </div>

                        <div class="mt-4 px-3 small text-muted d-flex flex-column gap-2">
                            <div class="d-flex align-items-center gap-2">
                                <span class="palette-btn" style="width:20px; height:20px; background:var(--success); border:none;"></span> Answered
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <span class="palette-btn" style="width:20px; height:20px; background:var(--warning); border:none;"></span> Review
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <span class="palette-btn" style="width:20px; height:20px; background:var(--primary-light); border:2px solid var(--primary);"></span> Current
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    let currentIdx = 0;
    const totalQ = @Model.Count;

    function showQ(index) {
        document.querySelectorAll('.question-card').forEach(el => el.classList.remove('active'));
        document.getElementById(`q-${index}`).classList.add('active');

        document.querySelectorAll('.palette-btn').forEach(el => el.classList.remove('active'));
        document.getElementById(`p-${index}`).classList.add('active');

        currentIdx = index;
    }

    function nextQ() {
        if(currentIdx < totalQ - 1) showQ(currentIdx + 1);
    }

    function prevQ() {
        if(currentIdx > 0) showQ(currentIdx - 1);
    }

    function jumpTo(index) {
        showQ(index);
    }

    function markAnswered(index) {
        document.getElementById(`p-${index}`).classList.add('answered');
    }

    function markReview(index) {
        const btn = document.getElementById(`p-${index}`);
        if(btn.classList.contains('review')) {
            btn.classList.remove('review');
        } else {
            btn.classList.add('review');
        }
    }

    // TIMER LOGIC
    let timeInSecs = @ViewBag.Duration * 60;
    const timerDisplay = document.getElementById('timerDisplay');

    setInterval(() => {
        if(timeInSecs <= 0) {
            document.getElementById('examForm').submit();
            return;
        }
        timeInSecs--;
        const min = Math.floor(timeInSecs / 60);
        const sec = timeInSecs % 60;
        timerDisplay.innerText = `${min}:${sec < 10 ? '0' : ''}${sec}`;
        if(timeInSecs < 300) timerDisplay.classList.add('text-danger');
    }, 1000);
</script>