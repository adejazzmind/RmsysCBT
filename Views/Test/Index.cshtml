@model IEnumerable<RmsysCBT.Models.Test>
@{
    ViewData["Title"] = "Available Exams";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary display-6">Available Exams</h2>
        <p class="text-muted">Select an assessment below to begin. Ensure you have enough uninterrupted time to complete it!</p>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-journal-x display-1 text-muted opacity-50 mb-3 d-block"></i>
                <h4 class="text-dark fw-bold">No exams available right now.</h4>
                <p class="text-muted">Check back later or contact your administrator.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 bg-white">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-file-earmark-text fs-4"></i>
                                </div>
                                <span class="badge bg-light text-dark border rounded-pill px-3 py-2 fw-medium">
                                    <i class="bi bi-stopwatch me-1"></i> @item.DurationMinutes mins
                                </span>
                            </div>

                            <h4 class="fw-bold text-dark mb-2">@item.Title</h4>

                            <p class="text-muted mb-4 flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                @item.Description
                            </p>

                            <a asp-action="Take" asp-route-id="@item.Id" class="btn btn-primary w-100 rounded-pill fw-bold shadow-sm py-2 mt-auto">
                                Start Exam <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>