@model IEnumerable<RmsysCBT.Models.Test>
@{
    ViewData["Title"] = "Available Tests";
}

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-center align-items-center mb-5 gap-4">

        <img src="~/images/logo.svg"
             alt="RmsysCBT Logo"
             class="img-fluid"
             style="height: 500px; width: auto; object-fit: contain;" />

        <div class="text-center text-md-start">
            <h1 class="display-4 fw-bold text-primary m-0">RmsysCBT Entry Assessment</h1>
            <p class="lead text-muted m-0">Select an exam below to begin your evaluation.</p>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var test in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge bg-light text-primary rounded-pill px-3 py-2">Test</span>
                            <small class="text-muted">⏱ @test.DurationMinutes mins</small>
                        </div>
                        <h4 class="card-title fw-bold">@test.Title</h4>
                        <p class="card-text text-muted">@test.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-4 pt-0">
                        <a href="/Test/Take/@test.Id" class="btn btn-primary w-100 py-2 rounded-3 fw-bold">
                            Start Exam <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>