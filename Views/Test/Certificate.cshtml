@model RmsysCBT.Models.TestResult
@{
    ViewData["Title"] = "Certificate of Excellence";
    // We set Layout to null so the website navigation bar and footer don't print!
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - RmsysCBT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* We use @@ to escape the symbol so Razor knows this is CSS, not C#! */
        @@page {
            size: landscape;
            margin: 0;
        }

        body {
            background-color: #e9ecef;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Georgia', serif;
        }

        .certificate-container {
            width: 1050px;
            height: 750px;
            background: white;
            padding: 30px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            position: relative;
        }

        .certificate-border {
            border: 12px solid #0d6efd;
            outline: 4px solid #ffc107;
            outline-offset: -20px;
            height: 100%;
            padding: 50px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            background-image: radial-gradient(circle, #ffffff, #f8f9fa);
        }

        .title {
            font-size: 4.5rem;
            color: #0d6efd;
            font-weight: bold;
            letter-spacing: 4px;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .subtitle {
            font-size: 1.8rem;
            color: #6c757d;
            margin-bottom: 40px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            letter-spacing: 6px;
        }

        .details {
            font-size: 1.4rem;
            color: #495057;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .recipient {
            font-size: 3.5rem;
            font-weight: bold;
            color: #212529;
            border-bottom: 2px solid #ced4da;
            display: inline-block;
            padding: 0 50px 10px;
            margin: 20px 0 40px;
        }

        .course-name {
            font-size: 2.5rem;
            color: #0d6efd;
            font-weight: bold;
            margin: 20px 0;
        }

        .badge-icon {
            font-size: 6rem;
            position: absolute;
            bottom: 40px;
            right: 80px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .signature {
            position: absolute;
            bottom: 50px;
            left: 80px;
            text-align: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .signature-line {
            border-top: 2px solid #212529;
            width: 250px;
            margin-top: 60px;
        }

        /* We use @@ to escape the symbol so Razor knows this is CSS, not C#! */
        @@media print {
            body {
                background-color: white;
            }

            .certificate-container {
                box-shadow: none;
                width: 100%;
                height: 100%;
                padding: 0;
            }

            .print-btn {
                display: none !important;
            }
        }
    </style>
</head>
<body>

    <div class="certificate-container">
        <div class="text-center position-absolute w-100 print-btn" style="top: -60px; left: 0;">
            <button onclick="window.print()" class="btn btn-primary btn-lg rounded-pill shadow px-4 fw-bold">
                <i class="bi bi-printer me-2"></i> Print / Save as PDF
            </button>
            <a href="javascript:history.back()" class="btn btn-light border btn-lg rounded-pill shadow-sm px-4 ms-2 fw-bold text-dark">
                Go Back
            </a>
        </div>

        <div class="certificate-border">
            <div class="title">Certificate</div>
            <div class="subtitle">OF EXCELLENCE</div>

            <div class="details">This is proudly presented to</div>

            <div class="recipient">@User.Identity?.Name</div>

            <div class="details">for demonstrating outstanding proficiency and passing the</div>
            <div class="course-name">RmsysCBT Official Assessment</div>

            <div class="details mb-4">
                with an exceptional score of <strong>@Model.Percentage%</strong>
            </div>

            <div class="details text-muted mt-3" style="font-size: 1.1rem;">
                Date Awarded: @DateTime.Now.ToString("MMMM dd, yyyy")
            </div>

            <div class="signature">
                <div class="signature-line"></div>
                <div class="mt-2 text-muted fw-bold">RmsysCBT Administrator</div>
            </div>

            <div class="badge-icon">
                🏆
            </div>
        </div>
    </div>

</body>
</html>